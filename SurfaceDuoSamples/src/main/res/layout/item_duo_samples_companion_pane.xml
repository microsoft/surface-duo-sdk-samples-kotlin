<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    card_view:cardElevation="@dimen/duo_sample_card_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/companion_pane_info"
            style="@style/DuoSampleTextView.Info"
            android:text="@string/companion_pane_info"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_7_companion_pane"
            style="@style/DuoSampleButton.GitHub"
            android:text="@string/try_it_out"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/companion_pane_info" />

        <Button
            android:id="@+id/link_7_companion_pane"
            style="@style/ImageViewLinkToGit"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/button_7_companion_pane"
            card_view:layout_constraintTop_toBottomOf="@id/companion_pane_info" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
