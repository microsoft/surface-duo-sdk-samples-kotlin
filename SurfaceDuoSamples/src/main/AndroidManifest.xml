<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.microsoft.device.display.samples.duosamples">

    <application
        android:name="DuoSamplesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/surface_duo_samples_app_title"
        android:supportsRtl="true"
        android:theme="@style/DuoSampleAppTheme">

        <activity
            android:name=".DuoSamplesActivity"
            android:exported="true"
            android:label="@string/surface_duo_samples_app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".about.AboutActivity"
            android:exported="true"
            android:label="@string/about_us_title"
            android:theme="@style/Theme.App" />
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity"
            android:theme="@style/Theme.App"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.google.android.gms.oss.licenses.OssLicensesActivity"
            android:theme="@style/Theme.App"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>
</manifest>