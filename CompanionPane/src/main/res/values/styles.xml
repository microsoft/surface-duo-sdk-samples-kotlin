<resources>

    <style name="CompanionPaneText" parent="@style/Widget.AppCompat.TextView" />

    <style name="CompanionPaneText.Filter">
        <item name="android:textSize">@dimen/companion_pane_small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CompanionPaneText.Filter.Title">
        <item name="android:textSize">@dimen/companion_pane_large_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CompanionPaneText.Filter.Subtitle">
        <item name="android:textSize">@dimen/companion_pane_small_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CompanionPaneSeekBar" parent="@style/Widget.AppCompat.SeekBar" />

    <style name="CompanionPaneSeekBar.Filter">
        <item name="android:max">100</item>
        <item name="android:progress">50</item>
        <item name="android:maxHeight">@dimen/companion_pane_seekBar_max_height</item>
        <item name="android:progressDrawable">@drawable/companion_pane_seek_bar_ruler_light</item>
        <item name="android:thumb">@drawable/companion_pane_seek_bar_slider_light</item>
    </style>
</resources>
