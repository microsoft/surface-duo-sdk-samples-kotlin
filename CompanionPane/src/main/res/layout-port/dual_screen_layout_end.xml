<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_screen_layout_port"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:orientation="vertical">

        <include
            layout="@layout/effect_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/large_padding" />

        <LinearLayout
            android:layout_width="@dimen/seekBar_long_width"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:layout_marginTop="@dimen/large_padding"
            android:layout_marginBottom="@dimen/large_padding"
            android:layout_marginStart="@dimen/large_padding"
            android:layout_marginEnd="@dimen/large_padding"
            android:orientation="horizontal">

            <include
                layout="@layout/magic_definition_control"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                layout="@layout/vignette_brightness_control"
                android:layout_marginTop="@dimen/large_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <include
            layout="@layout/short_filter_icon_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/large_padding" />

        <include
            layout="@layout/scale_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/large_padding" />

    </LinearLayout>

</LinearLayout>