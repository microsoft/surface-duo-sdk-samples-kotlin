<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scale_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_1_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/filter_2_icon"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/companion_pane_filter_icon"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_2_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="@id/filter_1_icon"
        app:layout_constraintEnd_toStartOf="@id/filter_3_icon"
        app:layout_constraintStart_toEndOf="@id/filter_1_icon"
        app:layout_constraintTop_toTopOf="@id/filter_1_icon"
        app:srcCompat="@drawable/companion_pane_hdr_icon"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_3_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="@id/filter_1_icon"
        app:layout_constraintEnd_toStartOf="@id/filter_4_icon"
        app:layout_constraintStart_toEndOf="@id/filter_2_icon"
        app:layout_constraintTop_toTopOf="@id/filter_1_icon"
        app:srcCompat="@drawable/companion_pane_align_icon"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_4_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="@id/filter_1_icon"
        app:layout_constraintEnd_toStartOf="@id/filter_5_icon"
        app:layout_constraintStart_toEndOf="@id/filter_3_icon"
        app:layout_constraintTop_toTopOf="@id/filter_1_icon"
        app:srcCompat="@drawable/companion_pane_vertical_icon"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_5_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="@id/filter_1_icon"
        app:layout_constraintEnd_toStartOf="@id/filter_6_icon"
        app:layout_constraintStart_toEndOf="@id/filter_4_icon"
        app:layout_constraintTop_toTopOf="@id/filter_1_icon"
        app:srcCompat="@drawable/companion_pane_horizontal_icon"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_6_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="@id/filter_1_icon"
        app:layout_constraintEnd_toStartOf="@id/filter_7_icon"
        app:layout_constraintStart_toEndOf="@id/filter_5_icon"
        app:layout_constraintTop_toTopOf="@id/filter_1_icon"
        app:srcCompat="@drawable/companion_pane_zoom_icon"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_7_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="@id/filter_1_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/filter_1_icon"
        app:srcCompat="@drawable/companion_pane_brightness_icon"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
