<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scale_control"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/scale_control_dot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/companion_pane_dot_height"
        android:layout_marginTop="@dimen/companion_pane_small_padding"
        android:layout_marginBottom="@dimen/companion_pane_small_padding"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/scale_control_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/companion_pane_dot" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/scale_control_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/companion_pane_icon_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scale_control_dot"
        app:srcCompat="@drawable/companion_pane_scale_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>