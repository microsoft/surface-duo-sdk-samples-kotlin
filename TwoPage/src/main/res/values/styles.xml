<resources>
    <style name="TwoPageText">
        <item name="android:textSize">@dimen/two_page_title_text_size</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/two_page_black</item>
    </style>

    <style name="TwoPageText.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TwoPageText.Title.AppName">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/two_page_app_name_text_size</item>
    </style>

    <style name="TwoPageText.Content">
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <style name="TwoPageText.Content.Italic">
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TwoPageText.PageNumber">
        <item name="android:textSize">@dimen/two_page_page_number_text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
