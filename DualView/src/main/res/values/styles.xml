<resources>

    <style name="DualViewText" parent="@style/Widget.AppCompat.TextView" />

    <style name="DualViewText.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dual_view_black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DualViewText.Restaurant" />

    <style name="DualViewText.Restaurant.Title">
        <item name="android:textColor">@color/dual_view_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DualViewText.Restaurant.Description">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dual_view_gray_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="DualViewText.Restaurant.Rating">
        <item name="android:textColor">@color/dual_view_gray_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DualViewText.Restaurant.Type">
        <item name="android:textColor">@color/dual_view_gray_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DualViewText.Restaurant.Price">
        <item name="android:textColor">@color/dual_view_gray_500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
